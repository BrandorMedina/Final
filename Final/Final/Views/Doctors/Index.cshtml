@model IEnumerable<Final.Models.Doctor>

@{
    ViewBag.Title = "Index";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BM- RM</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <br />
    <div class="jumbotron bg-dark text-light bg-success">
        <h1 class="display-4 text-center">Doctor</h1>
    </div>
    <div class="card-group">
        <div class="card bg-light">
            <img class="card-img-top" src="~/images/vicitas.png" alt="Vicitas " />
            <div class="card-body">
                <h5 class="card-title text-center">@Html.ActionLink("Visitas", "Index", "Visitas")</h5>
            </div>
        </div>
        <div class="card bg-light">
            <img class="card-img-top" src="~/images/consultas.png" alt="Consultas">
            <div class="card-body">
                <h5 class="card-title text-center">@Html.ActionLink("Consultas", "Index", "Consultas")</h5>
            </div>
        </div>
        <div class="card bg-light">
            <img class="card-img-top" src="~/images/citas.png" alt="Citas">
            <div class="card-body">
                <h5 class="card-title text-center">@Html.ActionLink("Citas", "Index", "Citas")</h5>
            </div>
        </div>
    </div>

    <div class="card-group">
        <div class="card bg-light">
            <img class="card-img-top" src="~/images/recetas.png" alt="Recetas" />
            <div class="card-body">
                <h5 class="card-title text-center">@Html.ActionLink("Recetas", "Index", "Recetas")</h5>
            </div>
        </div>
        <div class="card bg-light">
            <img class="card-img-top" src="~/images/pacientes.png" alt="Pacientes">
            <div class="card-body">
                <h5 class="card-title text-center">@Html.ActionLink("Pacientes", "Index", "Pacientes")</h5>
            </div>
        </div>
        <div class="card bg-light">
            <img class="card-img-top" src="~/images/citas.png" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title text-center">@Html.ActionLink("Citas", "Index", "Citas")</h5>
            </div>
        </div>
    </div>
    <br /><br />
    <p>
        @Html.ActionLink("Crear", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.clave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recaudado.id_doctor)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cedula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recaudado.id_doctor)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>